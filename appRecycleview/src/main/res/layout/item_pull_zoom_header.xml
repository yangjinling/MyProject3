<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/zoom_header_container"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:background="@null">

        <ImageView
            android:id="@+id/zoom_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#ffb2b2b2"
            android:src="@drawable/pull_zoom_header"
            />

        <TextView
            android:id="@+id/zoom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:textColor="@android:color/white"
            android:text="@string/zoom_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/zoom_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zoom_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/zoom_description"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:background="#4c101215"
            android:orientation="vertical"
            android:paddingTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/zoom_conclusion"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>